# Copy this to .env and fill in your values

# Required API Keys
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...  # Optional alternative

# Database
POSTGRES_DSN=postgresql+asyncpg://user:password@localhost/salesbot
REDIS_URL=redis://localhost:6379/0

# Business Configuration
CALENDLY_URL=https://calendly.com/your-link/30min

# Model Configuration
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
MAX_TOKENS=1000

# Cost Controls
DAILY_TOKEN_LIMIT=1000000
DAILY_COST_LIMIT=50.0

# Development
DEBUG_LOCAL=true

# Test Environment (optional)
POSTGRES_TEST_DSN=postgresql+asyncpg://user:password@localhost/salesbot_test
REDIS_TEST_URL=redis://localhost:6379/1
INTEGRATION_TESTS=true
PERFORMANCE_TESTS=false
SCALABILITY_TESTS=false